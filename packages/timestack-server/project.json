{
  "name": "timestack-server",
  "tags": ["type:app", "scope:server"],
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/timestack-server/src",
  "projectType": "application",
  "targets": {
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --project tsconfig.app.json --noEmit",
        "cwd": "packages/timestack-server"
      },
      "dependsOn": ["^typecheck"]
    },
    "build": {
      "executor": "@nx/js:tsc",
      "dependsOn": ["^build"],
      "options": {
        "outputPath": "packages/timestack-server/dist",
        "main": "packages/timestack-server/src/main.ts",
        "tsConfig": "packages/timestack-server/tsconfig.app.json",
        "assets": ["packages/timestack-server/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false
        }
      }
    },
    "start": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "timestack-server:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "timestack-server:build",
          "inspect": false
        },
        "production": {
          "buildTarget": "timestack-server:build:production",
          "inspect": false
        }
      }
    },
    "migration:deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typeorm-ts-node-commonjs migration:run -d src/database/datasource/app.datasource.ts",
        "cwd": "packages/timestack-server"
      }
    },
    "migration:revert": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typeorm-ts-node-commonjs migration:revert -d src/database/datasource/app.datasource.ts",
        "cwd": "packages/timestack-server"
      }
    },
    "migration:generate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typeorm-ts-node-commonjs migration:generate src/database/migrations/{args.name} -d src/database/datasource/app.datasource.ts",
        "cwd": "packages/timestack-server"
      }
    },
    "migration:create": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typeorm-ts-node-commonjs migration:create src/database/migrations/{args.name}",
        "cwd": "packages/timestack-server"
      }
    },
    "migration:show": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typeorm-ts-node-commonjs migration:show -d src/database/datasource/app.datasource.ts",
        "cwd": "packages/timestack-server"
      }
    },
    "migration:schema:sync": {
      "executor": "nx:run-commands",
      "options": {
        "command": "typeorm-ts-node-commonjs schema:sync -d src/database/datasource/app.datasource.ts",
        "cwd": "packages/timestack-server"
      }
    }
  }
}
